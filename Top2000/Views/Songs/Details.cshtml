@model Top2000.Models.Song

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Song</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.titel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.titel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.jaar)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.jaar)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Artiest.naam)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Artiest.naam)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.songtekst)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.songtekst)
        </dd>
        <dd>
            @{
                if (Model.Video.IsEmpty())
                {
                    <iframe width="560" height="315" src="https://www.youtube.com/embed/dQw4w9WgXcQ?start=40&autoplay=1" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe> }
                else
                {
                    <iframe width="560" height="315" src="@Html.DisplayFor(model => model.Video)?&autoplay=1" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"></iframe>
                }
            }

        </dd>
    </dl>
</div>

<div>
    @{
        string positions = "";
        foreach (var item in Model.Lijsts)
        {
            positions += item.top2000jaar + ": " + item.positie + " | ";
        }

        @Html.Raw(positions)

    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.songid }) |
    @Html.ActionLink("Back to List", "Index")
</p>
